#: doc/src/sgml/pg_tde_en.sgml:21
#, no-wrap
msgid "  shared_preload_libraries = 'pg_tde'\n"
msgstr "  shared_preload_libraries = 'pg_tde'\n"

#. type: Content of: <sect1><sect2><sect3><para>
